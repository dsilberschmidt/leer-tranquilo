{
  "manifest_version": 3,
  "name": "Leer Tranquilo",
  "version": "0.3.4",
  "description": "Expande y congela comentarios (OpenWeb/Spot.IM, etc.). Seguro por defecto.",
  "permissions": [],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true
    }
  ]
}
