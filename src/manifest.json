
{
  "manifest_version": 3,
  "name": "Leer Tranquilo",
  "version": "0.3.0",
  "description": "Expande y “congela” comentarios en páginas con OpenWeb/Spot.IM.",
  "content_scripts": [
    {
      "matches": [
        "*://www.jpost.com/*",
        "*://*.jpost.com/*",
        "*://*.spot.im/*",
        "*://*.openweb.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true
    }
  ]
}
